      <a href="/profile">Profile</a>
      <a href="/logout">Logout</a>
    </div>
  </nav>

  <!-- Posts Container -->
  <div class="posts-container">
    <% posts.forEach(post => { %>

      <div class="post-item" onclick="redirectToPost('<%= post._id %>')">
        <img src="<%= post.imageUrl %>" class="post-image" />
      </div>
      
    <% }) %>
  </div>
  

</body>

<script>
  // âœ… Redirect to Post Details Page
  function redirectToPost(postId) {
  window.location.href = `/postDetailAll/${postId}`;
}


  
</script>

